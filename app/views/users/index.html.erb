<h1>Listing users</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th>Pending account</th>
    <th>State</th>
    <th>See this</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.pending_account %></td>
    <td>
        <% unless user.pending_account? %>
            <%= link_to "Activate", confirm_user_path(user) %>
        <% else %>
            Activated
        <% end %>
    </td>
    <td>
        <%= link_to 'Show', user %>
        <% link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    </td>

  </tr>
<% end %>
</table>

<br />

